<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Sign Up</h1>
        <div style="width:30%; margin: 25px auto; ">
            <form action="/register" method="POST">
                <label>Username</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                 <label>Email   <em>*optional</em></label>
                <div class="form-group">
                    <input id="mail" class="form-control" type="email" name="email" placeholder="email">
                </div>
                 <label>Password</label>
                 <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <input id="sub" name="subscribe" value="sub" type="checkbox"></input><span> Check to be sent poems, short passages, and more</span>
                </div>
                 <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
                </div>
            </form>
             <p>Already have an account? <a href="/login">Log in</a></p>
        </div>
    </div>
</div>

<% include ../partials/footer %>