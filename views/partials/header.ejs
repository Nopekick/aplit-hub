            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){  %>
                        <li><a style="color: white" href="/login">Login</a></li>
                        <li><a style="color: white" href="/register">Sign Up</a></li>
                    <% } else if(currentUser.isAdmin){  %>
                        <li><a style="color: white" href="/admin">Admin Page</a></li>
                        <li><a style="color: white" href="#">Signed in as <%= currentUser.username %> (Admin)</a></li>
                        <li><a style="color: white" href="/logout">Logout</a></li>
                    <%  } else{ %>
                        <li><a style="color: white" href="#">Signed in as <%= currentUser.username %></a></li>
                        <li><a style="color: white" href="/logout">Logout</a></li>
                    <%  }  %>
                </ul>
            </div>
        </div>
</nav>

 <div class="container">
        <% if(error  && error.length > 0){  %>
            <div class="alert alert-danger" role="alert" style=" text-align: center;">
                <%= error %>
            </div>
        <% } %>
        <% if(success  && success.length > 0){  %>
        <div class="alert alert-success" role="alert" style=" text-align: center;">
            <%= success %>
        </div>
         <% } %>
    </div>










  