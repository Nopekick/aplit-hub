<% include ./partials/header %>

<div class="pp-lg">
     <h2 >Contact</h2>
     <p>Feel free to write comments, concerns, praise, questions, etc. If necessary, an admin may contact you via email.</p>
        <form method="POST" action="/contact">
        <div class="row">
                <div class="form-group col-sm-12">
                     <label>Subject</label>
                    <input type="text" name="title" class="form-control" placeholder="subject title"></input>
                </div>
                <% if(currentUser && currentUser.email.length === 0){  %>
                    <div class="form-group col-sm-12">
                        <label>Email  <em> *optional</em></label>
                        <input type="text" name="email" class="form-control" placeholder="email"></input>
                    </div>
                <% } %>
                    <div class="form-group col-sm-12">
                        <textarea  cols="107" rows="10" name="text"></textarea>
                    </div>
                    <div class="form-group col-sm-12">
                    <button class="btn btn-primary btn-md">Send message</button>
                    </div>
        </div>
     </form>
</div>

<% include ./partials/footer %>